@model string
@{
    ViewData["Title"] = "Resources Page";
}

<article class="grow flex flex-col px-2 pt-32">
    <h1 class="text-primary font-black font-archivo text-4xl text-center leading-none mb-6">Time to Convert Your Website to a PWA</h1>
    <p class="text-grey text-lg text-center leading-relaxed mb-12 max-w-[55ch] mx-auto">
        App icons, a manifest file, and service worker files have been created. Follow the steps below to convert your website intto a PWA.
        </p>

    <ol class="list-decimal list-insdie pl-12 md:mx-auto">
        <div class="flex flex-col mobilel:flex-row mb-8 mobilel:items-center">
            <li class="mb-2"> 
                Download your resources.
            </li>
            <a id="download-link" asp-route="DownloadGet" class="bg-primary text-white rounded-3xl px-4 py-2 hover:cursor-pointer hover:bg-primary-hover self-end mr-4 mobilel:mr-0 mobilel:ml-8" target="_blank">Download</a>
        </div>
        <li class="mb-8">Extract and place all resources in the root of you website.</li>
        <div class="mb-6 flex flex-col md:flex-row md:items-center">
        <li class="mb-2">
            Paste the following code in the &lt;head&gt; section of all pages of your website.
        </li>
        <button id="btnCopy" type="button" class="bg-primary text-white rounded-3xl px-4 py-2 hover:cursor-pointer hover:bg-primary-hover self-end mr-4 md:mr-0 md:ml-8">Copy</button>
        </div>

    </ol>
    <div class="mx-auto border-primary border-[1px] shadow-md rounded-md px-2 md:px-8 py-4 text-primary mb-12">
        <pre id="htmlCode" class="whitespace-pre-wrap text-xs xs:text-base font-roboto">@Model</pre>
    </div>
</article>

@section Scripts{
    <script src="~/js/clean-up.js" asp-append-version="true"></script>
}